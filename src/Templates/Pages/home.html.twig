{% extends 'layouts/base.html.twig' %}

{% block content %}
    <article class="prose">
        <h1>{{ page.title }}</h1>
        
        {% for page in pages %}
            <h2><a href="{{ page.slug }}">{{ page.title }}</a></h2>
            {% if page.excerpt %}
                {{ page.excerpt }}
            {% else %}
                {{ page.content|striptags|slice(0, 100) }}
            {% endif %}
        {% endfor %}
    </article>
{% endblock %}
