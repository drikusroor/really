{% extends 'layouts/base.html.twig' %}

{% block content %}
	<h1 class="text-3xl font-bold">{{ title ?? 'Home' }}</h1>

	<div class="mt-5">
		{% for page in pages %}
			<article class="bg-white p-3 drop-shadow mt-3 rounded">
				<h2 class="text-xl font-bold">
					<a href="{{ page.slug }}">{{ page.title }}</a>
				</h2>
				<div class="text-sm text-gray-600">
					{{ page.date|date('F j, Y') }}
				</div>
				<div class="mt-2">

					{% if page.excerpt %}
						{{ page.excerpt }}
					{% else %}
						{{ page.content|striptags|slice(0, 100) }}
					{% endif %}
				</div>
				<div class="mt-2">
					<a href="{{ page.slug }}" class="text-blue-500 hover:underline">Read more</a>
				</div>
			</article>
		{% endfor %}
	</div>
{% endblock %}
