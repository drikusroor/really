{% extends 'layouts/base.html.twig' %}

{% block content %}
    <h1 class="text-4xl font-bold mb-4">Welcome to the Admin Dashboard</h1>
    <p class="mb-4">This is the admin dashboard. You can manage your pages and posts here.</p>

    {% if message %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">{{ message }}</span>

            {% if url %}
                <a href="{{ url }}" class="text-blue-500 hover:text-blue-700">View page</a>
            {% endif %}
        </div>
    {% endif %}

    <!-- A form with an input field for the page title, a textarea for the page content and a submit button -->
    <form action="/admin/post" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label for="title" class="block mb-2">Page Title</label>
            <input type="text" name="title" id="title" class="w-full border border-gray-400 p-2 rounded">
        </div>
        <div class="mb-4">
            <label for="content" class="block mb-2">Page Content</label>
            <textarea name="content" id="content" cols="30" rows="10" class="w-full border border-gray-400 p-2 rounded"></textarea>
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Create Page</button>
    </form>
{% endblock %}
